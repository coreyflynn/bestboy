{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "lib",
    "moduleResolution": "node",
    "importHelpers": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
